  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "auto-changelog": "^2.4.0",
    "np": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^15.6.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@justifi/webcomponents": "^0.2.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
