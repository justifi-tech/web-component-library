{
  "name": "@justifi/react-components",
  "sideEffects": false,
  "version": "0.2.1",
  "description": "React specific wrapper for JustiFi web components",
  "repository": {
    "type": "git",
    "url": "https://github.com/justifi-tech/web-component-library.git"
  },
  "scripts": {
