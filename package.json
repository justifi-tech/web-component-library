{
  "private": true,
  "name": "web-component-library",
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently 'pnpm --filter @justifi/webcomponents dev' 'pnpm --filter @repo/docs dev'",
    "dev:server": "concurrently 'pnpm --filter @justifi/webcomponents dev' 'pnpm --filter @repo/component-examples start:server'",
    "preview-storybook": "turbo run preview-storybook",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "turbo run test",
    "test:watch": "pnpm --filter @justifi/webcomponents test:watch",
    "test:file": "turbo run test:file",
    "test:e2e": "pnpm --filter @repo/component-examples test:e2e",
    "test:e2e:ui": "pnpm --filter @repo/component-examples test:e2e:ui",
    "test:e2e:headed": "pnpm --filter @repo/component-examples test:e2e:headed",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs:lint": "node scripts/run-docs-lint.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@repo/docs^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "prettier": "^3.1.1",
    "turbo": "^2.0.6"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.6.5"
}
