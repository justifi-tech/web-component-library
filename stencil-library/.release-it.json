{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "assets": ["dist/*.zip"],
    "autoGenerate": true
  },
  "git": {
    "changelog": "npm run auto-changelog --stdout --commit-limit false --unreleased"
  },
  "hooks": {
    "after:bump": "npm run auto-changelog -p"
  }
}
